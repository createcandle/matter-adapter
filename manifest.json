{
  "author": "CandleSmartHome.com",
  "description": "Adds support for Matter devices",
  "content_scripts": [
    {
      "css": [
        "css/extension.css"
      ],
      "js": [
        "js/extension.js"
      ]
    }
  ],  
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "1.1.0"
    }
  },
  "homepage_url": "https://github.com/createcandle/matter-adapter",
  "id": "matter-adapter",
  "license": "",
  "manifest_version": 1,
  "name": "Matter adapter",
  "options": {
    "default": {
      "Debugging": false
    },
    "schema": {
      "properties": {
        "Debugging": {
          "type": "boolean",
          "description": "Advanced. Will generate details about the addon's processes in the internal log."
        }
      },
      "required": [],
      "type": "object"
    }
  },
  "short_name": "matter",
  "version": "0.0.3",
  "web_accessible_resources": [
    "css/*.css",
    "images/*.svg",
	"images/*.png",
	"images/*.gif",
	"images/*.jpg",
    "js/*.js",
    "views/*.html"
  ]
}
